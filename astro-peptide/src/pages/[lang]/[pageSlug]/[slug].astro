---
import WhatArePeptidesPage from '../../learn/what-are-peptides.astro';
import { pageSlugTranslations, type SupportedLanguage } from '../../../i18n/translations';

export const prerender = true;

export function getStaticPaths() {
  const languages: SupportedLanguage[] = ['nl', 'de', 'fr', 'es', 'it', 'ru'];

  return languages.map((lang) => {
    const pageSlug = pageSlugTranslations[lang]?.['learn'] ?? 'learn';
    const slug = pageSlugTranslations[lang]?.['what-are-peptides'] ?? 'what-are-peptides';
    return {
      params: { lang, pageSlug, slug },
      props: { lang },
    };
  });
}

const { lang } = Astro.props as { lang: SupportedLanguage };
---

<WhatArePeptidesPage lang={lang} />