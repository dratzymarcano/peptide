---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Peptide Research Institute | Premium Research Peptides">
	<!-- Slider Start -->
	<section class="slider">
		<div class="container">
			<div class="row">
				<div class="col-md-8">
					<span class="h6 d-inline-block mb-4 subhead text-uppercase">Research Grade Peptides</span>
					<h1 class="text-uppercase text-white mb-5">Advance Your <span class="text-color">Research</span><br>With Purity</h1>
				
					<a href="/peptides/" class="btn btn-main ">View Catalog <i class="ti-angle-right ml-3"></i></a>
				</div>
			</div>
		</div>
	</section>
	<!-- Section Slider End -->

	<!-- Section Intro Start -->
	<section class="mt-80px">
		<div class="container">
			<div class="row ">
				<div class="col-lg-4 col-md-6">
					<div class="card p-5 border-0 rounded-top border-bottom position-relative hover-style-1">
						<span class="number">01</span>
						<h3 class="mt-3">â‰¥99% Purity</h3>
						<p class="mt-3 mb-4">All our peptides undergo rigorous HPLC and Mass Spectrometry testing to ensure the highest purity for your research.</p>
						<a href="/quality/" class="text-color text-uppercase font-size-13 letter-spacing font-weight-bold"><i class="ti-minus mr-2 "></i>Quality Control</a>
					</div>
				</div>
				<div class="col-lg-4 col-md-6">
					<div class="card p-5 border-0 rounded-top hover-style-1">
						<span class="number">02</span>
						<h3 class="mt-3">Fast Shipping</h3>
						<p class="mt-3 mb-4">Same-day dispatch for orders placed before 2 PM. Secure and discreet packaging for all shipments.</p>
						<a href="/shipping/" class="text-color text-uppercase font-size-13 letter-spacing font-weight-bold"><i class="ti-minus mr-2 "></i>Shipping Info</a>
					</div>
				</div>
				<div class="col-lg-4 col-md-6">
					<div class="card p-5 border-0 rounded-top hover-style-1">
						<span class="number">03</span>
						<h3 class="mt-3">Research Hub</h3>
						<p class="mt-3 mb-4">Access our comprehensive database of peptide research, reconstitution protocols, and stability guides.</p>
						<a href="/research/" class="text-color text-uppercase font-size-13 letter-spacing font-weight-bold"><i class="ti-minus mr-2 "></i>Learn More</a>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- Section Intro End -->

	<!-- Section About start -->
	<section class="section about">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-6">
					<img src="/images/bg/bg-5.jpg" alt="" class="img-fluid rounded shadow w-100">
				</div>
				
				<div class="col-lg-6">
					<div class="pl-3 mt-5 mt-lg-0">
						<h2 class="mt-1 mb-3">Commitment to <br> <span class="text-color">Scientific Excellence</span></h2>

						<p class="mb-4">We are dedicated to providing the highest purity research peptides for scientific study. Our products are manufactured in state-of-the-art facilities and undergo rigorous third-party testing to ensure accuracy and consistency.</p>

						<a href="/about" class="btn btn-main">About Us<i class="fa fa-angle-right ml-2"></i></a>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- Section About End -->

	<!-- Section Services Start -->
	<section class="section services ">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-8 text-center">
					<div class="section-title">
						<div class="divider mb-3"></div>
						<h2>Product Categories</h2>
						<p>Explore our wide range of research peptides.</p>
					</div>
				</div>
			</div>

			<div class="row no-gutters">
				<div class="col-lg-4 col-md-6 col-sm-6">
					<div class="text-center  px-4 py-5 hover-style-1">
						<i class="icofont-laboratory text-lg text-color"></i>
						<h4 class="mt-3 mb-4 text-uppercase">Peptide Fragments</h4>
						<p>Short chain amino acids for specific research applications.</p>
					</div>
				</div>
				<div class="col-lg-4 col-md-6 col-sm-6">
					<div class="text-center  px-4 py-5 hover-style-1">
						<i class="icofont-molecule text-lg text-color"></i>
						<h4 class="mt-3 mb-4 text-uppercase">Growth Factors</h4>
						<p>Signaling molecules for cell proliferation and differentiation studies.</p>
					</div>
				</div>
				<div class="col-lg-4 col-md-6 col-sm-6">
					<div class="text-center  px-4 py-5 hover-style-1">
						<i class="icofont-dna-alt-1 text-lg text-color"></i>
						<h4 class="mt-3 mb-4 text-uppercase">Cosmetic Peptides</h4>
						<p>Research into skin regeneration and anti-aging properties.</p>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- Section Services End -->

	<!-- Section Course Start -->
	<section class="section course bg-gray">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-8 text-center">
					<div class="section-title">
						<div class="divider mb-3"></div>
						<h2>Best Sellers</h2>
						<p>Our most popular research peptides.</p>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-lg-3 col-md-6">
					<div class="card border-0 rounded-0 p-0 mb-5 mb-lg-0 shadow-sm">
						<img src="/images/gallery/course-1.jpg" alt="" class="img-fluid">

						<div class="card-body">
							<a href="/peptides/buy-bpc-157"><h4 class="font-secondary mb-0">BPC-157</h4></a>
							<p class="mb-2">5mg / 10mg</p>
						</div>
					</div>
				</div>

				<div class="col-lg-3 col-md-6">
					<div class="card border-0 rounded-0 p-0 mb-5 mb-lg-0 shadow-sm">
						<img src="/images/gallery/course-2.jpg" alt="" class="img-fluid">

						<div class="card-body">
							<a href="/peptides/buy-tb-500"><h4 class="font-secondary mb-0">TB-500</h4></a>
							<p class="mb-2">2mg / 5mg</p>
						</div>
					</div>
				</div>

				<div class="col-lg-3 col-md-6">
					<div class="card border-0 rounded-0 p-0 mb-5 mb-lg-0 shadow-sm">
						<img src="/images/gallery/course-3.jpg" alt="" class="img-fluid">

						<div class="card-body">
							<a href="/peptides/buy-semaglutide"><h4 class="font-secondary mb-0">Semaglutide</h4></a>
							<p class="mb-2">2mg / 5mg</p>
						</div>
					</div>
				</div>
				<div class="col-lg-3 col-md-6">
					<div class="card border-0 rounded-0 p-0 mb-5 mb-lg-0 shadow-sm">
						<img src="/images/gallery/course-2.jpg" alt="" class="img-fluid">

						<div class="card-body">
							<a href="/peptides/buy-tirzepatide"><h4 class="font-secondary mb-0">Tirzepatide</h4></a>
							<p class="mb-2">5mg / 10mg</p>
						</div>
					</div>
				</div>

			</div>
			<div class="row justify-content-center">
				<div class="col-lg-8">
					<div class="mt-5 text-center">
						<a href="/peptides/" class="btn btn-main">View All Peptides</a>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- Section Course ENd -->
</Layout>
