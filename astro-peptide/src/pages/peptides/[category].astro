  primaryKeyword: string;
  searchVolume: string;
  shortDescription: string;
  longDescription: string;
  benefits: string[];
}> = {
  'weight-loss': {
    title: 'Weight Loss Peptides',
    h1: 'Buy Weight Loss Peptides UK',
    metaTitle: 'Buy Weight Loss Peptides UK | Semaglutide, Tirzepatide & More',
    metaDescription: 'Buy weight loss peptides UK. Research-grade Semaglutide, Tirzepatide, AOD-9604 & 5-Amino-1MQ. ≥99% purity, COA included. Fast UK delivery.',
    primaryKeyword: 'buy weight loss peptides uk',
