---
import Layout from '../../layouts/Layout.astro';
import PageTitle from '../../components/PageTitle.astro';
import { getLangFromUrl, t, getLocalizedPath } from '../../i18n/translations';

const currentLang = getLangFromUrl(Astro.url);

const guides = [
  {
    title: t(currentLang, 'learnPage.whatArePeptides'),
    description: t(currentLang, 'learnPage.description'),
    href: getLocalizedPath('/learn/what-are-peptides/', currentLang),
    icon: "book-open",
    readTime: "8 min"
  }
];
---

<Layout 
  title={`${t(currentLang, 'learnPage.title')} | Peptide Shop`}
  description={t(currentLang, 'learnPage.description')}
  breadcrumbs={[
    { name: t(currentLang, 'common.home'), url: getLocalizedPath('/', currentLang) },
    { name: t(currentLang, 'learnPage.title'), url: getLocalizedPath('/learn/', currentLang) }
  ]}
>
  <style>
    .learn-hero {
      background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
      padding: 100px 0 60px;
    }
    
    .hero-title {
      font-size: 2.5rem;
      font-weight: 800;
      color: #1e293b;
      margin-bottom: 16px;
    }
    
    .hero-subtitle {
      color: #64748b;
      font-size: 1.125rem;
      max-width: 600px;
    }
    
    .guides-section {
      padding: 80px 0;
    }
    
    .guides-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 32px;
    }
    
    @media (max-width: 991px) {
      .guides-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }
    
    @media (max-width: 575px) {
      .guides-grid {
        grid-template-columns: 1fr;
      }
    }
    
    .guide-card {
      background: white;
      border: 1px solid #e2e8f0;
      border-radius: 16px;
      padding: 32px;
      transition: all 0.3s;
      text-decoration: none;
      display: block;
    }
    
    .guide-card:hover {
      border-color: #0077b6;
      box-shadow: 0 8px 24px rgba(0,119,182,0.1);
      transform: translateY(-4px);
    }
    
    .guide-icon {
      width: 56px;
      height: 56px;
      background: linear-gradient(135deg, #e0f2fe, #bae6fd);
      border-radius: 14px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 20px;
    }
    
    .guide-icon svg {
      width: 28px;
      height: 28px;
      stroke: #0077b6;
    }
    
    .guide-title {
      font-size: 1.25rem;
      font-weight: 700;
      color: #1e293b;
      margin-bottom: 12px;
    }
    
    .guide-description {
      color: #64748b;
      line-height: 1.6;
      margin-bottom: 16px;
    }
    
    .guide-meta {
      color: #0077b6;
      font-size: 14px;
      font-weight: 600;
    }
  </style>

  <PageTitle 
    title={t(currentLang, 'learnPage.title')}
    subtitle={t(currentLang, 'learnPage.description')}
    breadcrumbs={[
      { name: t(currentLang, 'common.home'), url: getLocalizedPath('/', currentLang) },
      { name: t(currentLang, 'learnPage.title') }
    ]}
  />

  <section class="guides-section">
    <div class="container">
      <div class="guides-grid">
        {guides.map((guide) => (
          <a href={guide.href} class="guide-card">
            <div class="guide-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                {guide.icon === 'book-open' && <><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path></>}
              </svg>
            </div>
            <h2 class="guide-title">{guide.title}</h2>
            <p class="guide-description">{guide.description}</p>
            <span class="guide-meta">{guide.readTime} â†’</span>
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout>
