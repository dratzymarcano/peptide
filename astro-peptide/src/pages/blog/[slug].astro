---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import PageTitle from '../../components/PageTitle.astro';
import { getLangFromUrl, t, getLocalizedPath } from '../../i18n/translations';

export const prerender = true;

const currentLang = getLangFromUrl(Astro.url);

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Get related posts (same category, excluding current)
const allPosts = await getCollection('blog');
const relatedPosts = allPosts
  .filter(p => p.data.category === post.data.category && p.slug !== post.slug)
  .slice(0, 3);

const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": post.data.title,
  "image": post.data.image ? new URL(post.data.image, Astro.site).href : undefined,
  "datePublished": new Date(post.data.publishDate).toISOString(),
  "author": {
    "@type": "Person",
    "name": post.data.author
  },
  "publisher": {
    "@type": "Organization",
    "name": "Peptide Shop",
    "logo": {
      "@type": "ImageObject",
      "url": "https://peptide-shop.net/logo.png"
    }
  },
  "description": post.data.meta.description
};
---

<Layout 
  title={post.data.meta.title} 
  description={post.data.meta.description}
  image={post.data.image}
  article={true}
  breadcrumbs={[
    { name: "Home", url: "/" },
    { name: "Blog", url: "/blog" },
    { name: post.data.title, url: `/blog/${post.slug}/` }
  ]}
>
  <script is:inline type="application/ld+json" set:html={JSON.stringify(articleSchema)} />

  <PageTitle 
    title={post.data.title}
    breadcrumbs={[
      { name: "Home", url: "/" },
      { name: "Blog", url: "/blog" },
      { name: post.data.title }
    ]}
  >
    <div class="post-meta mt-3">
      <span class="badge badge-light mr-2">{post.data.category}</span>
      <span class="text-white-50 mr-3">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="mr-1">
          <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
          <circle cx="12" cy="7" r="4"></circle>
        </svg>
        {post.data.author}
      </span>
      <span class="text-white-50">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="mr-1">
          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
          <line x1="16" y1="2" x2="16" y2="6"></line>
          <line x1="8" y1="2" x2="8" y2="6"></line>
          <line x1="3" y1="10" x2="21" y2="10"></line>
        </svg>
        {new Date(post.data.publishDate).toLocaleDateString('en-GB', { day: 'numeric', month: 'long', year: 'numeric' })}
      </span>
    </div>
  </PageTitle>

  <section class="section">
    <div class="container">
      <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8">
          {post.data.image && (
            <div class="post-featured-image mb-4">
              <img src={post.data.image} alt={post.data.title} class="img-fluid rounded" />
            </div>
          )}
          
          <article class="post-content">
            <Content />
          </article>

          <!-- Tags -->
          {post.data.tags && post.data.tags.length > 0 && (
            <div class="post-tags mt-4 pt-4 border-top">
              <strong>Tags:</strong>
              {post.data.tags.map(tag => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          )}

          <!-- Share -->
          <div class="post-share mt-4 pt-4 border-top">
            <strong>Share this article:</strong>
            <div class="share-buttons">
              <a href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent(Astro.url.href)}`} target="_blank" rel="noopener" class="share-btn twitter">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path>
                </svg>
              </a>
              <a href={`https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent(Astro.url.href)}&title=${encodeURIComponent(post.data.title)}`} target="_blank" rel="noopener" class="share-btn linkedin">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
          <div class="sidebar">
            <!-- Related Posts -->
            {relatedPosts.length > 0 && (
              <div class="sidebar-widget">
                <h4>{t(currentLang, 'blogPage.relatedArticles')}</h4>
                <ul class="related-posts">
                  {relatedPosts.map(related => (
                    <li>
                      <a href={getLocalizedPath(`/blog/${related.slug}/`, currentLang)}>
                        <span class="related-title">{related.data.title}</span>
                        <span class="related-date">{new Date(related.data.publishDate).toLocaleDateString(currentLang === 'en' ? 'en-GB' : currentLang, { day: 'numeric', month: 'short' })}</span>
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            )}

            <!-- Back to Blog -->
            <div class="sidebar-widget">
              <a href={getLocalizedPath('/blog/', currentLang)} class="btn btn-outline-primary btn-block w-100">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="mr-2">
                  <line x1="19" y1="12" x2="5" y2="12"></line>
                  <polyline points="12 19 5 12 12 5"></polyline>
                </svg>
                {t(currentLang, 'common.backTo')} {t(currentLang, 'nav.blog')}
              </a>
            </div>

            <!-- CTA -->
            <div class="sidebar-widget cta-widget">
              <h4>{t(currentLang, 'nav.peptides')}</h4>
              <p>{t(currentLang, 'blogPage.shopPeptidesDesc')}</p>
              <a href={getLocalizedPath('/peptides/', currentLang)} class="btn btn-primary btn-block w-100">{t(currentLang, 'blogPage.shopPeptides')}</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero */
  .blog-post-hero {
    background: linear-gradient(135deg, #023e8a 0%, #0077b6 100%);
    padding: 1.5rem 0 2rem;
  }
  
  .breadcrumb-list {
    display: flex;
    align-items: center;
    list-style: none;
    padding: 0;
    margin: 0;
    flex-wrap: wrap;
  }
  
  .breadcrumb-list .breadcrumb-item {
    display: flex;
    align-items: center;
    font-size: 0.85rem;
    color: white;
    font-weight: 500;
  }
  
  .breadcrumb-list .breadcrumb-item a {
    color: white;
    text-decoration: none;
    font-weight: 500;
  }
  
  .breadcrumb-list .breadcrumb-item a:hover {
    color: #ffd700;
  }
  
  .breadcrumb-list .breadcrumb-item:not(:last-child)::after {
    content: '';
    display: inline-block;
    width: 6px;
    height: 6px;
    border-right: 1.5px solid white;
    border-top: 1.5px solid white;
    transform: rotate(45deg);
    margin: 0 0.75rem;
  }
  
  .breadcrumb-list .breadcrumb-item.active {
    color: white;
    font-weight: 600;
    max-width: 200px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  
  .post-category {
    display: inline-block;
    background: rgba(255, 255, 255, 0.15);
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 0.75rem;
  }
  
  .post-title {
    font-size: 2rem;
    font-weight: 700;
    color: white;
    margin: 0 0 1rem;
    line-height: 1.3;
  }
  
  .post-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    color: rgba(255, 255, 255, 0.85);
    font-size: 0.9rem;
  }
  
  .post-meta span {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  /* Content */
  .post-featured-image img {
    width: 100%;
    max-height: 400px;
    object-fit: cover;
  }
  
  .post-content {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
  }
  
  .post-content :global(h2) {
    color: #023e8a;
    font-size: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #e9ecef;
  }
  
  .post-content :global(h3) {
    color: #023e8a;
    font-size: 1.25rem;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  
  .post-content :global(p) {
    line-height: 1.8;
    margin-bottom: 1rem;
    color: #475569;
  }
  
  .post-content :global(ul),
  .post-content :global(ol) {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }
  
  .post-content :global(li) {
    margin-bottom: 0.5rem;
    line-height: 1.7;
  }
  
  .post-content :global(strong) {
    color: #1e293b;
  }
  
  .post-content :global(a) {
    color: #0077b6;
  }

  /* Tags */
  .post-tags {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.5rem;
  }
  
  .tag {
    background: #e8f4fd;
    color: #0077b6;
    font-size: 0.8rem;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
  }

  /* Share */
  .post-share {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  
  .share-buttons {
    display: flex;
    gap: 0.5rem;
  }
  
  .share-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    color: white;
    transition: transform 0.2s;
  }
  
  .share-btn:hover {
    transform: scale(1.1);
    color: white;
  }
  
  .share-btn.twitter {
    background: #1da1f2;
  }
  
  .share-btn.linkedin {
    background: #0077b5;
  }

  /* Sidebar */
  .sidebar {
    position: sticky;
    top: 100px;
  }
  
  .sidebar-widget {
    background: white;
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
  }
  
  .sidebar-widget h4 {
    font-size: 1.1rem;
    color: #023e8a;
    margin-bottom: 1rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid #e9ecef;
  }
  
  .related-posts {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .related-posts li {
    padding: 0.75rem 0;
    border-bottom: 1px solid #e9ecef;
  }
  
  .related-posts li:last-child {
    border-bottom: none;
  }
  
  .related-posts a {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    text-decoration: none;
    gap: 1rem;
  }
  
  .related-title {
    color: #475569;
    font-size: 0.9rem;
    line-height: 1.4;
    transition: color 0.2s;
  }
  
  .related-posts a:hover .related-title {
    color: #0077b6;
  }
  
  .related-date {
    color: #94a3b8;
    font-size: 0.8rem;
    white-space: nowrap;
  }
  
  .cta-widget {
    background: linear-gradient(135deg, #023e8a 0%, #0077b6 100%);
    color: white;
  }
  
  .cta-widget h4 {
    color: white;
    border-bottom-color: rgba(255, 255, 255, 0.2);
  }
  
  .cta-widget p {
    color: rgba(255, 255, 255, 0.85);
    font-size: 0.9rem;
  }
  
  .cta-widget .btn-primary {
    background: white;
    color: #0077b6;
    border: none;
    font-weight: 600;
  }
  
  .cta-widget .btn-primary:hover {
    background: #f1f5f9;
  }

  /* Mobile */
  @media (max-width: 991px) {
    .sidebar {
      position: static;
      margin-top: 2rem;
    }
  }
  
  @media (max-width: 767px) {
    .post-title {
      font-size: 1.5rem;
    }
    
    .post-content {
      padding: 1.25rem;
    }
  }
</style>
