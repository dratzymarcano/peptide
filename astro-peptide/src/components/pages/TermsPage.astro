---
import Layout from '../../layouts/Layout.astro';
import PageTitle from '../../components/PageTitle.astro';
import { t, getLocalizedPath } from '../../i18n/translations';
import type { SupportedLanguage } from '../../i18n/translations';

interface Props {
  lang: SupportedLanguage;
}

const { lang } = Astro.props;

const breadcrumbs = [
  { name: t(lang, 'nav.home'), url: getLocalizedPath('/', lang) },
  { name: t(lang, 'footer.termsAndConditions'), url: getLocalizedPath('/terms', lang) }
];
---

<Layout 
  title={`${t(lang, 'legalPages.terms.title')} | Peptide Shop`}
  description={t(lang, 'legalPages.terms.subtitle')}
  breadcrumbs={breadcrumbs}
>
  <PageTitle 
    title={t(lang, 'legalPages.terms.title')}
    subtitle={t(lang, 'legalPages.terms.subtitle')}
    breadcrumbs={breadcrumbs}
  />

  <section class="section">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-10">
          <p class="text-muted mb-5">{t(lang, 'legalPages.lastUpdated')}: December 31, 2025</p>

          <h2 class="mb-3">{t(lang, 'legalPages.terms.acceptance.title')}</h2>
          <p class="mb-4">{t(lang, 'legalPages.terms.acceptance.content')}</p>

          <h2 class="mb-3">{t(lang, 'legalPages.terms.researchUse.title')}</h2>
          <div class="alert alert-warning border-0 shadow-sm mb-4" role="alert">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="mr-2"><path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"></path><line x1="12" x2="12" y1="9" y2="13"></line><line x1="12" x2="12.01" y1="17" y2="17"></line></svg>
            <strong>{t(lang, 'legalPages.terms.researchUse.warning')}</strong>
          </div>
          <p>{lang === 'en' ? 'They are NOT for use in:' : lang === 'nl' ? 'NIET voor gebruik bij:' : lang === 'de' ? 'NICHT zur Verwendung bei:' : lang === 'fr' ? 'NON destinés à:' : lang === 'es' ? 'NO para uso en:' : 'NON per uso in:'}</p>
          <ul class="list-unstyled mb-4">
            <li class="mb-2 d-flex align-items-center">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="mr-2 text-danger"><path d="M18 6 6 18"></path><path d="m6 6 12 12"></path></svg>
              {t(lang, 'legalPages.terms.researchUse.notHumans')}
            </li>
            <li class="mb-2 d-flex align-items-center">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="mr-2 text-danger"><path d="M18 6 6 18"></path><path d="m6 6 12 12"></path></svg>
              {t(lang, 'legalPages.terms.researchUse.notFood')}
            </li>
            <li class="mb-2 d-flex align-items-center">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="mr-2 text-danger"><path d="M18 6 6 18"></path><path d="m6 6 12 12"></path></svg>
              {t(lang, 'legalPages.terms.researchUse.notHousehold')}
            </li>
          </ul>
          <p class="mb-4">{t(lang, 'legalPages.terms.researchUse.acknowledgment')}</p>

          <h2 class="mb-3">{t(lang, 'legalPages.terms.purchaser.title')}</h2>
          <p>{t(lang, 'legalPages.terms.purchaser.intro')}</p>
          <ul class="list-unstyled mb-4">
            <li class="mb-2 d-flex align-items-center">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="mr-2 text-color"><polyline points="20 6 9 17 4 12"></polyline></svg>
              {t(lang, 'legalPages.terms.purchaser.age')}
            </li>
            <li class="mb-2 d-flex align-items-start">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="mr-2 mt-1 text-color flex-shrink-0"><polyline points="20 6 9 17 4 12"></polyline></svg>
              {t(lang, 'legalPages.terms.purchaser.institution')}
            </li>
            <li class="mb-2 d-flex align-items-start">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="mr-2 mt-1 text-color flex-shrink-0"><polyline points="20 6 9 17 4 12"></polyline></svg>
              {t(lang, 'legalPages.terms.purchaser.hazards')}
            </li>
            <li class="mb-2 d-flex align-items-start">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="mr-2 mt-1 text-color flex-shrink-0"><polyline points="20 6 9 17 4 12"></polyline></svg>
              {t(lang, 'legalPages.terms.purchaser.handling')}
            </li>
          </ul>

          <h2 class="mb-3">{t(lang, 'legalPages.terms.liability.title')}</h2>
          <p class="mb-4">{t(lang, 'legalPages.terms.liability.content')}</p>

          <h2 class="mb-3">{t(lang, 'legalPages.terms.governing.title')}</h2>
          <p class="mb-4">{t(lang, 'legalPages.terms.governing.content')}</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
