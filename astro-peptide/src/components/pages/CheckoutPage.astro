---
import Layout from '../../layouts/Layout.astro';
import CheckoutComponent from '../../components/Checkout';
import { getLocalizedPath, t, type SupportedLanguage } from '../../i18n/translations';

interface Props {
  lang: SupportedLanguage;
}

const { lang } = Astro.props;
---

<Layout title={`${t(lang, 'cart.checkout')} | Peptide Shop`} description={t(lang, 'cart.checkoutSubtitle')}>
  <!-- Modern Hero Section -->
  <section style="background: linear-gradient(135deg, #0077b6 0%, #023e8a 100%); padding: 100px 0 60px; margin-top: 70px;">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-8">
          <nav aria-label="breadcrumb" style="margin-bottom: 20px;">
            <ol class="breadcrumb" style="background: transparent; padding: 0; margin: 0;">
              <li class="breadcrumb-item"><a href={getLocalizedPath('/', lang)} style="color: white; text-decoration: none; font-weight: 500;">{t(lang, 'nav.home')}</a></li>
              <li class="breadcrumb-item"><a href={getLocalizedPath('/cart/', lang)} style="color: white; text-decoration: none; font-weight: 500;">{t(lang, 'nav.cart')}</a></li>
              <li class="breadcrumb-item active" style="color: white; font-weight: 600;">{t(lang, 'cart.checkout')}</li>
            </ol>
          </nav>
          <h1 style="color: white; font-size: clamp(2rem, 4vw, 3rem); font-weight: 800; margin-bottom: 16px; line-height: 1.1;">
            {t(lang, 'cart.secureCheckout')}
          </h1>
          <p style="color: rgba(255,255,255,0.9); font-size: 1.1rem; max-width: 600px; line-height: 1.6; margin: 0;">
            {t(lang, 'cart.checkoutSubtitle')}
          </p>
        </div>
        <div class="col-lg-4 text-lg-right mt-4 mt-lg-0">
          <div style="display: inline-flex; align-items: center; gap: 16px;">
            <div style="display: flex; align-items: center; gap: 8px; background: rgba(255,255,255,0.15); padding: 12px 20px; border-radius: 12px; backdrop-filter: blur(10px);">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
              </svg>
              <span style="color: white; font-weight: 600; font-size: 14px;">{t(lang, 'cart.secureBadge')}</span>
            </div>
            <div style="display: flex; align-items: center; gap: 8px; background: rgba(255,255,255,0.15); padding: 12px 20px; border-radius: 12px; backdrop-filter: blur(10px);">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                <rect width="18" height="11" x="3" y="11" rx="2" ry="2"></rect>
                <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
              </svg>
              <span style="color: white; font-weight: 600; font-size: 14px;">SSL</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Checkout Section -->
  <section style="padding: 60px 0 80px; background: linear-gradient(180deg, #f8fafc 0%, #ffffff 100%);">
    <CheckoutComponent client:only="react" lang={lang} />
  </section>
</Layout>

