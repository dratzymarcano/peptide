---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import ProductCard from '../ProductCard';
import { translations, type SupportedLanguage, cleanProductTitle, translatePackageSize } from '../../i18n/translations';
import { getLocalizedPath } from '../../i18n/config';
import { getMarket } from '../../i18n/market';

interface Props {
  lang: SupportedLanguage;
}

const { lang } = Astro.props;
const market = getMarket(lang);

function t(key: string): string {
  const keys = key.split('.');
  let value: any = translations[lang];
  for (const k of keys) {
      if (value && typeof value === 'object' && k in value) {
          value = value[k];
      } else {
          return key;
      }
  }
  return typeof value === 'string' ? value : key;
}

// Helper to clean slug - removes /peptides/ prefix and leading slashes
const cleanSlug = (slug: string) => slug.replace(/^\/peptides\//, '').replace(/^\//, '');

// Fetch products for "Best Sellers" (simulated by taking first 8)
const allProducts = await getCollection('products');
const featuredProducts = allProducts.slice(0, 8);

const categories = [
  { name: t('nav.weightLoss'), slug: 'weight-loss', icon: 'scale', desc: t('home.categories.desc.weightLoss'), gradient: 'from-purple-500 to-pink-500' },
  { name: t('nav.muscleRecovery'), slug: 'muscle-recovery', icon: 'activity', desc: t('home.categories.desc.muscleRecovery'), gradient: 'from-blue-500 to-cyan-500' },
  { name: t('nav.cognitive'), slug: 'cognitive', icon: 'brain', desc: t('home.categories.desc.cognitive'), gradient: 'from-green-500 to-emerald-500' },
  { name: t('nav.growthHormone'), slug: 'growth-hormone', icon: 'clock', desc: t('home.categories.desc.antiAging'), gradient: 'from-orange-500 to-red-500' },
];

const testimonials = [
  { name: 'Dr. Sarah Mitchell', role: t('home.testimonials.role1'), text: t('home.testimonials.text1'), rating: 5 },
  { name: 'Prof. James Chen', role: t('home.testimonials.role2'), text: t('home.testimonials.text2'), rating: 5 },
  { name: 'Dr. Emma Rodriguez', role: t('home.testimonials.role3'), text: t('home.testimonials.text3'), rating: 5 },
];

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": `Peptide Shop - Buy Peptides ${market.marketName} & Europe`,
  "url": "https://peptide-shop.net",
  "description": `Buy peptides ${market.marketName} & Europe. Premium research peptides for sale with 99% purity. Fast delivery, COA included. Semaglutide, BPC-157, Tirzepatide & more.`,
  "inLanguage": ["en-GB", "nl-NL", "de-DE", "fr-FR", "es-ES", "it-IT"],
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://peptide-shop.net/peptides?q={search_term_string}",
    "query-input": "required name=search_term_string"
  }
};

const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Peptide Shop",
  "alternateName": `PeptideShop ${market.marketName}`,
  "url": "https://peptide-shop.net",
  "logo": "https://peptide-shop.net/favicon.png",
  "description": `Buy peptides ${market.marketName} & Europe. Leading supplier of research peptides with 99% purity. Fast delivery across ${market.geoPlacename} and Europe.`,
  "areaServed": [
    {"@type": "Country", "name": "United Kingdom"},
    {"@type": "Country", "name": "Netherlands"},
    {"@type": "Country", "name": "Germany"},
    {"@type": "Country", "name": "France"},
    {"@type": "Country", "name": "Spain"},
    {"@type": "Country", "name": "Italy"},
    {"@type": "Country", "name": "Belgium"},
    {"@type": "Country", "name": "Ireland"},
    {"@type": "Country", "name": "Austria"},
    {"@type": "Country", "name": "Portugal"}
  ],
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+44-123-456-7890",
    "contactType": "customer service",
    "areaServed": ["GB", "NL", "DE", "FR", "ES", "IT"],
    "availableLanguage": ["English", "Dutch", "German", "French", "Spanish", "Italian"]
  },
  "sameAs": [
    "https://t.me/peptideshop"
  ]
};
---

<Layout 
  title={t('home.heroTitle') + ' | ' + t('home.heroTitleHighlight') + ' | Peptide Shop'}
  description={t('home.heroSubtitle')}
>
  <script is:inline type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
  <script is:inline type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />

  <!-- SHOPCART-INSPIRED E-COMMERCE STYLES -->
  <style is:global>
    :root {
      --shop-primary: #0077b6;
      --shop-primary-light: rgba(0, 119, 182, 0.1);
      --shop-secondary: #1e293b;
      --shop-accent: #f59e0b;
      --shop-bg: #ffffff;
      --shop-surface: #f9fafb;
      --shop-border: #e5e7eb;
      --shop-text: #1e293b;
      --shop-text-muted: #6b7280;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background-color: var(--shop-bg);
      color: var(--shop-text);
      font-family: 'Raleway', -apple-system, sans-serif;
      overflow-x: hidden;
    }

    /* Full-width sections */
    .full-width-section {
      width: 100vw;
      position: relative;
      left: 50%;
      right: 50%;
      margin-left: -50vw;
      margin-right: -50vw;
    }

    .section-padding {
      padding: 80px 60px;
    }

    @media (max-width: 768px) {
      .section-padding {
        padding: 60px 20px;
      }
    }

    .inner-container {
      max-width: 1400px;
      margin: 0 auto;
      width: 100%;
    }

    /* Shopcart Hero Banner */
    .hero-banner {
      background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 50%, #d1fae5 100%);
      position: relative;
      overflow: hidden;
    }

    .hero-banner::before {
      content: '';
      position: absolute;
      top: -50%;
      right: -10%;
      width: 80%;
      height: 200%;
      background: radial-gradient(circle, rgba(0, 119, 182, 0.05) 0%, transparent 60%);
      border-radius: 50%;
    }

    .hero-content {
      position: relative;
      z-index: 2;
    }

    .hero-badge {
      display: inline-block;
      background: var(--shop-primary);
      color: white;
      padding: 6px 16px;
      border-radius: 20px;
      font-size: 13px;
      font-weight: 600;
      margin-bottom: 16px;
    }

    .hero-title {
      font-size: clamp(2.5rem, 5vw, 3.5rem);
      font-weight: 800;
      color: var(--shop-secondary);
      line-height: 1.15;
      margin-bottom: 24px;
    }

    .hero-subtitle {
      font-size: 1.125rem;
      color: var(--shop-text-muted);
      max-width: 500px;
      margin-bottom: 32px;
      line-height: 1.6;
    }

    .btn-shop-primary {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      background: var(--shop-primary);
      color: white;
      padding: 14px 32px;
      border-radius: 10px;
      font-weight: 600;
      font-size: 15px;
      text-decoration: none;
      transition: all 0.3s ease;
      border: none;
      cursor: pointer;
    }

    .btn-shop-primary:hover {
      background: #15503a;
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(0, 119, 182, 0.25);
    }

    .btn-shop-outline {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      background: transparent;
      color: var(--shop-secondary);
      padding: 14px 32px;
      border-radius: 10px;
      font-weight: 600;
      font-size: 15px;
      text-decoration: none;
      border: 2px solid var(--shop-border);
      transition: all 0.3s ease;
      cursor: pointer;
    }

    .btn-shop-outline:hover {
      border-color: var(--shop-primary);
      color: var(--shop-primary);
      background: var(--shop-primary-light);
    }

    /* Section Headers */
    .section-header {
      margin-bottom: 40px;
    }

    .section-label {
      font-size: 13px;
      font-weight: 600;
      color: var(--shop-primary);
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 8px;
    }

    .section-title {
      font-size: clamp(1.75rem, 4vw, 2.5rem);
      font-weight: 700;
      color: var(--shop-secondary);
      margin-bottom: 12px;
    }

    .section-desc {
      font-size: 1rem;
      color: var(--shop-text-muted);
      max-width: 600px;
    }

    /* Product Grid */
    .products-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 24px;
    }

    @media (max-width: 1200px) {
      .products-grid {
        grid-template-columns: repeat(3, 1fr);
      }
    }

    @media (max-width: 992px) {
      .products-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media (max-width: 576px) {
      .products-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 12px;
      }
    }

    /* Category Cards - Shopcart Style - 4 columns */
    .category-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 20px;
    }

    @media (max-width: 1200px) {
      .category-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media (max-width: 576px) {
      .category-grid {
        grid-template-columns: 1fr;
      }
    }

    /* Hero Image Styles */
    .hero-image-wrapper {
      position: relative;
    }

    .hero-image-container {
      position: relative;
      background: linear-gradient(135deg, rgba(0, 119, 182, 0.1) 0%, rgba(0, 119, 182, 0.05) 100%);
      border-radius: 24px;
      padding: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .hero-main-image {
      max-width: 100%;
      max-height: 400px;
      object-fit: contain;
      filter: drop-shadow(0 20px 40px rgba(0, 0, 0, 0.1));
    }

    .floating-card {
      position: absolute;
      background: white;
      padding: 16px 24px;
      border-radius: 12px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }

    .floating-card-1 {
      bottom: -10px;
      left: -20px;
    }

    .floating-card-2 {
      top: 20px;
      right: -10px;
    }

    .floating-icon {
      width: 48px;
      height: 48px;
      background: var(--shop-primary-light);
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .category-card {
      background: white;
      border: 1px solid var(--shop-border);
      border-radius: 12px;
      padding: 24px;
      display: flex;
      align-items: center;
      gap: 16px;
      transition: all 0.3s ease;
      text-decoration: none;
    }

    .category-card:hover {
      border-color: var(--shop-primary);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
      transform: translateY(-4px);
    }

    .category-icon {
      width: 64px;
      height: 64px;
      border-radius: 12px;
      background: var(--shop-primary-light);
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
    }

    .category-info h3 {
      font-size: 16px;
      font-weight: 600;
      color: var(--shop-secondary);
      margin: 0 0 4px 0;
    }

    .category-info p {
      font-size: 13px;
      color: var(--shop-text-muted);
      margin: 0;
    }

    /* Stats Bar */
    .stats-bar {
      background: var(--shop-surface);
      border-top: 1px solid var(--shop-border);
      border-bottom: 1px solid var(--shop-border);
    }

    .stat-item {
      text-align: center;
      padding: 24px 16px;
    }

    .stat-number {
      font-size: 2rem;
      font-weight: 800;
      color: var(--shop-primary);
      line-height: 1;
      margin-bottom: 4px;
    }

    .stat-label {
      font-size: 13px;
      color: var(--shop-text-muted);
      font-weight: 500;
    }

    /* Feature Cards */
    .feature-card {
      background: white;
      border: 1px solid var(--shop-border);
      border-radius: 12px;
      padding: 24px;
      transition: all 0.3s ease;
    }

    .feature-card:hover {
      border-color: var(--shop-primary);
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.06);
    }

    .feature-icon {
      width: 48px;
      height: 48px;
      border-radius: 10px;
      background: var(--shop-primary-light);
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 16px;
    }

    /* Testimonial Cards */
    .testimonial-card {
      background: white;
      border: 1px solid var(--shop-border);
      border-radius: 12px;
      padding: 28px;
      height: 100%;
      transition: all 0.3s ease;
    }

    .testimonial-card:hover {
      border-color: var(--shop-primary);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
    }

    .star-rating {
      color: var(--shop-primary);
      font-size: 16px;
      margin-bottom: 16px;
    }

    /* FAQ */
    .faq-item {
      background: white;
      border: 1px solid var(--shop-border);
      border-radius: 12px;
      margin-bottom: 12px;
      overflow: hidden;
      transition: all 0.3s ease;
    }

    .faq-item:hover {
      border-color: var(--shop-primary);
    }

    .faq-question {
      padding: 20px 24px;
      cursor: pointer;
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-weight: 600;
      font-size: 1rem;
      color: var(--shop-secondary);
    }

    .faq-question:hover {
      color: var(--shop-primary);
    }

    .faq-answer {
      padding: 0 24px;
      color: var(--shop-text-muted);
      line-height: 1.7;
      max-height: 0;
      overflow: hidden;
      opacity: 0;
      transition: all 0.3s ease;
    }

    .faq-item.active .faq-answer {
      padding: 0 24px 20px 24px;
      max-height: 500px;
      opacity: 1;
    }

    .faq-item.active .faq-question i {
      transform: rotate(45deg);
    }

    /* CTA Section - Green Theme */
    .cta-full-section {
      background: linear-gradient(135deg, #0077b6 0%, #023e8a 100%);
    }

    .cta-box {
      position: relative;
      text-align: center;
      padding: 40px 20px;
      overflow: hidden;
    }

    .cta-content {
      position: relative;
      z-index: 2;
    }

    .cta-title {
      font-size: clamp(1.75rem, 4vw, 2.5rem);
      font-weight: 700;
      color: white;
      margin-bottom: 16px;
    }

    .cta-subtitle {
      font-size: 1rem;
      color: rgba(255, 255, 255, 0.85);
      max-width: 550px;
      margin: 0 auto 32px;
      line-height: 1.7;
    }

    .cta-form {
      display: flex;
      flex-direction: column;
      gap: 12px;
      justify-content: center;
      align-items: center;
      max-width: 500px;
      margin: 0 auto;
    }

    @media (min-width: 576px) {
      .cta-form {
        flex-direction: row;
      }
    }

    .cta-input {
      flex: 1;
      width: 100%;
      padding: 16px 24px;
      border: none;
      border-radius: 12px;
      font-size: 15px;
      background: white;
      color: #1e293b;
    }

    .cta-input::placeholder {
      color: #9ca3af;
    }

    .cta-button {
      padding: 16px 32px;
      background: #f59e0b;
      color: white;
      border: none;
      border-radius: 12px;
      font-weight: 600;
      font-size: 15px;
      cursor: pointer;
      transition: all 0.3s ease;
      white-space: nowrap;
    }

    .cta-button:hover {
      background: #d97706;
      transform: translateY(-2px);
    }

    .cta-privacy {
      margin-top: 20px;
      font-size: 13px;
      color: rgba(255, 255, 255, 0.7);
    }

    .cta-decoration {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      pointer-events: none;
    }

    .cta-circle {
      position: absolute;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.05);
    }

    .cta-circle-1 {
      width: 400px;
      height: 400px;
      top: -200px;
      right: -100px;
    }

    .cta-circle-2 {
      width: 300px;
      height: 300px;
      bottom: -150px;
      left: -50px;
    }

    /* About Us Section Styles */
    .about-image-grid {
      position: relative;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;
    }

    .about-image-main {
      grid-column: span 2;
    }

    .about-image-secondary {
      grid-column: span 1;
    }

    .about-badge {
      position: absolute;
      bottom: 20px;
      right: 20px;
      background: #0077b6;
      color: white;
      padding: 20px 24px;
      border-radius: 12px;
      text-align: center;
      box-shadow: 0 8px 24px rgba(0, 119, 182, 0.3);
    }

    .about-badge-number {
      font-size: 2rem;
      font-weight: 800;
      line-height: 1;
    }

    .about-badge-text {
      font-size: 13px;
      font-weight: 500;
      line-height: 1.3;
      margin-top: 4px;
    }

    .about-stat {
      display: flex;
      gap: 16px;
      margin-bottom: 16px;
    }

    .about-stat-icon {
      width: 48px;
      height: 48px;
      border-radius: 10px;
      background: var(--shop-primary-light);
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
    }

    /* Blog Cards */
    .blog-card {
      background: white;
      border: 1px solid var(--shop-border);
      border-radius: 12px;
      overflow: hidden;
      height: 100%;
      transition: all 0.3s ease;
    }

    .blog-card:hover {
      border-color: var(--shop-primary);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
      transform: translateY(-4px);
    }

    .blog-image {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }

    /* Quality Section */
    .quality-feature {
      display: flex;
      gap: 16px;
      margin-bottom: 24px;
    }

    .quality-icon {
      width: 48px;
      height: 48px;
      border-radius: 10px;
      background: var(--shop-primary-light);
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
    }

    /* Utilities */
    .text-shop-primary { color: var(--shop-primary); }
    .bg-shop-surface { background: var(--shop-surface); }
    
    /* Feature Icons */
    .feature-icon-wrapper {
      width: 48px;
      height: 48px;
      background: var(--shop-primary-light);
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
    }

    /* Scroll Reveal Animation */
    .scroll-reveal {
      opacity: 0;
      transform: translateY(30px);
      transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .scroll-reveal.revealed {
      opacity: 1;
      transform: translateY(0);
    }

    /* ===== ENTERPRISE MOBILE-FIRST RESPONSIVE STYLES ===== */
    /* Based on 8px grid system with generous whitespace */
    
    :root {
      --mobile-padding-x: 20px;
      --mobile-padding-section: 48px;
      --mobile-gap-sm: 12px;
      --mobile-gap-md: 20px;
      --mobile-gap-lg: 32px;
      --touch-target: 48px;
    }
    
    /* Extra Small Mobile (up to 575px) */
    @media (max-width: 575px) {
      .section-padding {
        padding: var(--mobile-padding-section) var(--mobile-padding-x);
      }
      
      .inner-container {
        padding-left: 0;
        padding-right: 0;
      }
      
      /* Hero section - Generous spacing */
      .hero-banner .section-padding {
        padding-top: 40px;
        padding-bottom: 56px;
      }
      
      .hero-badge {
        font-size: 12px;
        padding: 8px 16px;
        margin-bottom: 16px;
        border-radius: 24px;
      }
      
      .hero-title {
        font-size: 2rem;
        line-height: 1.2;
        letter-spacing: -0.5px;
        margin-bottom: var(--mobile-gap-md);
      }
      
      .hero-subtitle {
        font-size: 1rem;
        margin-bottom: var(--mobile-gap-lg);
        line-height: 1.7;
        color: var(--shop-text-muted);
      }
      
      /* Buttons - Full width with proper touch targets */
      .btn-shop-primary,
      .btn-shop-outline {
        width: 100%;
        justify-content: center;
        padding: 16px 24px;
        font-size: 16px;
        min-height: var(--touch-target);
        border-radius: 12px;
        margin-bottom: var(--mobile-gap-sm);
      }
      
      .d-flex.flex-wrap.gap-3 {
        gap: var(--mobile-gap-sm) !important;
        flex-direction: column;
      }
      
      .btn-shop-primary:active,
      .btn-shop-outline:active {
        transform: scale(0.98);
      }
      
      /* Section headers - Clear hierarchy */
      .section-header {
        margin-bottom: var(--mobile-gap-lg);
        text-align: center;
      }
      
      .section-label {
        font-size: 12px;
        letter-spacing: 1.5px;
        margin-bottom: 8px;
        display: block;
      }
      
      .section-title {
        font-size: 1.625rem;
        line-height: 1.3;
        letter-spacing: -0.3px;
        margin-bottom: var(--mobile-gap-sm);
      }
      
      .section-desc {
        font-size: 0.95rem;
        line-height: 1.65;
        max-width: 100%;
      }
      
      /* Stats bar - Clean 2x2 grid with breathing room */
      .stats-bar {
        padding: 0 !important;
      }
      
      .stats-bar .inner-container {
        padding: var(--mobile-gap-lg) var(--mobile-padding-x) !important;
      }
      
      .stats-bar .row {
        margin: 0;
        gap: 0;
      }
      
      .stats-bar .row > [class*="col-"] {
        padding: var(--mobile-gap-sm);
      }
      
      .stat-item {
        padding: 16px 12px;
        background: rgba(0, 119, 182, 0.03);
        border-radius: 12px;
        text-align: center;
      }
      
      .stat-number {
        font-size: 1.75rem;
        margin-bottom: 4px;
        line-height: 1.1;
      }
      
      .stat-label {
        font-size: 12px;
        line-height: 1.35;
