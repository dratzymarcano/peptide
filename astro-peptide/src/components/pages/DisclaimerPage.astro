---
import Layout from '../../layouts/Layout.astro';
import PageTitle from '../../components/PageTitle.astro';
import { getEntry } from 'astro:content';
import { t, getLocalizedPath } from '../../i18n/translations';
import type { SupportedLanguage } from '../../i18n/translations';

interface Props {
  lang: SupportedLanguage;
}

const { lang } = Astro.props;
const pageCopy = await getEntry('pageCopy', 'en-disclaimer');
const copy = pageCopy?.data.copy ?? {};

const breadcrumbs = [
  { name: t(lang, 'nav.home'), url: getLocalizedPath('/', lang) },
  { name: copy.title ?? t(lang, 'footer.disclaimer'), url: getLocalizedPath('/disclaimer', lang) }
];
---

<Layout 
  title={`${copy.title ?? t(lang, 'legalPages.disclaimer.title')} | Peptide Shop`}
  description={copy.subtitle ?? t(lang, 'legalPages.disclaimer.subtitle')}
  breadcrumbs={breadcrumbs}
>
  <PageTitle 
    title={copy.title ?? t(lang, 'legalPages.disclaimer.title')}
    subtitle={copy.subtitle ?? t(lang, 'legalPages.disclaimer.subtitle')}
    breadcrumbs={breadcrumbs}
  />

  <section class="section">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-10">
          
          <div class="alert alert-danger border-0 shadow-sm mb-5" role="alert">
            <h4 class="alert-heading d-flex align-items-center">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="mr-2"><path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"></path><line x1="12" x2="12" y1="9" y2="13"></line><line x1="12" x2="12.01" y1="17" y2="17"></line></svg>
              {copy.warning ?? t(lang, 'legalPages.disclaimer.warning')}
            </h4>
            <p class="mb-0">{copy.warningText ?? t(lang, 'legalPages.disclaimer.warningText')}</p>
          </div>

          <p class="lead mb-4">{copy.lead ?? t(lang, 'legalPages.disclaimer.lead')}</p>

          <p>{copy.patent ?? t(lang, 'legalPages.disclaimer.patent')}</p>

          <p>{copy.qualified ?? t(lang, 'legalPages.disclaimer.qualified')}</p>

          <p>{copy.rights ?? t(lang, 'legalPages.disclaimer.rights')}</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
