---
import { getEntry } from 'astro:content';
import { getLangFromUrl, t, getLocalizedPath, translateCategorySlug } from '../i18n/translations';

const currentYear = new Date().getFullYear();
const currentLang = getLangFromUrl(Astro.url);

// Helper for category URLs with proper translation
const getCategoryUrl = (category: string) => {
	if (currentLang === 'en') {
		return `/peptides/${category}/`;
	}
	const translatedSlug = translateCategorySlug(category, currentLang);
	return `/${currentLang}/peptides/${translatedSlug}/`;
};
const siteCopy = await getEntry('site', currentLang === 'ru' ? 'ru' : 'en') || await getEntry('site', 'en');
const siteData = siteCopy?.data;
const contactEmail = siteData?.email ?? 'peptideshop@zohomail.com';
---

<footer class="site-footer">
	<div class="container">
		<!-- Mobile: Brand section at top -->
		<div class="footer-brand-section">
			<div class="footer-logo">
				<img src="/favicon.png" alt="Peptide Shop" width="36" height="36" style="object-fit: contain;" />
				<span class="footer-logo-text">Peptide<span class="highlight">Shop</span></span>
			</div>
			<p class="footer-description">
				{t(currentLang, 'home.heroSubtitle')}
			</p>
			<div class="footer-socials">
				<a href={`mailto:${contactEmail}`} class="social-link" aria-label="Email">
					<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<rect width="20" height="16" x="2" y="4" rx="2"></rect>
						<path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
					</svg>
				</a>
				<a href="https://t.me/Nebelzee" target="_blank" rel="noopener" class="social-link" aria-label="Telegram">
					<svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
						<path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
					</svg>
				</a>
			</div>
		</div>

		<!-- Mobile: Collapsible Footer Sections -->
		<div class="footer-links-grid">
			<!-- Products Section -->
			<div class="footer-section">
				<button class="footer-toggle" type="button" aria-expanded="false">
					<h4 class="footer-heading">{t(currentLang, 'nav.peptides')}</h4>
					<svg class="toggle-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<polyline points="6 9 12 15 18 9"></polyline>
					</svg>
				</button>
				<ul class="footer-links">
					<li><a href={getLocalizedPath('/peptides/', currentLang)}>{t(currentLang, 'nav.allPeptides')}</a></li>
					<li><a href={getCategoryUrl('weight-loss')}>{t(currentLang, 'nav.weightLoss')}</a></li>
					<li><a href={getCategoryUrl('muscle-recovery')}>{t(currentLang, 'nav.muscleRecovery')}</a></li>
					<li><a href={getCategoryUrl('growth-hormone')}>{t(currentLang, 'nav.growthHormone')}</a></li>
					<li><a href={getCategoryUrl('tanning')}>{t(currentLang, 'nav.tanning')}</a></li>
				</ul>
			</div>

			<!-- Company Section -->
			<div class="footer-section">
				<button class="footer-toggle" type="button" aria-expanded="false">
					<h4 class="footer-heading">{t(currentLang, 'footer.aboutUs')}</h4>
					<svg class="toggle-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<polyline points="6 9 12 15 18 9"></polyline>
					</svg>
				</button>
				<ul class="footer-links">
					<li><a href={getLocalizedPath('/about/', currentLang)}>{t(currentLang, 'nav.about')}</a></li>
					<li><a href={getLocalizedPath('/quality/', currentLang)}>{t(currentLang, 'nav.quality')}</a></li>
					<li><a href={getLocalizedPath('/contact/', currentLang)}>{t(currentLang, 'nav.contact')}</a></li>
					<li><a href={getLocalizedPath('/faq/', currentLang)}>{t(currentLang, 'product.faq')}</a></li>
					<li><a href={getLocalizedPath('/shipping/', currentLang)}>{t(currentLang, 'cart.shipping')}</a></li>
				</ul>
			</div>

			<!-- Legal Section -->
			<div class="footer-section">
				<button class="footer-toggle" type="button" aria-expanded="false">
					<h4 class="footer-heading">{t(currentLang, 'footer.legal')}</h4>
					<svg class="toggle-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<polyline points="6 9 12 15 18 9"></polyline>
					</svg>
				</button>
				<ul class="footer-links">
					<li><a href={getLocalizedPath('/terms/', currentLang)}>{t(currentLang, 'footer.termsAndConditions')}</a></li>
					<li><a href={getLocalizedPath('/privacy/', currentLang)}>{t(currentLang, 'footer.privacyPolicy')}</a></li>
					<li><a href={getLocalizedPath('/disclaimer/', currentLang)}>{t(currentLang, 'footer.disclaimer')}</a></li>
					<li><a href={getLocalizedPath('/coa-policy/', currentLang)}>{t(currentLang, 'footer.coaPolicy')}</a></li>
					<li><a href={getLocalizedPath('/sitemap/', currentLang)}>{t(currentLang, 'footer.sitemap')}</a></li>
				</ul>
			</div>

			<!-- Contact Section -->
			<div class="footer-section">
				<button class="footer-toggle" type="button" aria-expanded="false">
					<h4 class="footer-heading">{t(currentLang, 'nav.contact')}</h4>
					<svg class="toggle-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<polyline points="6 9 12 15 18 9"></polyline>
					</svg>
				</button>
				<div class="footer-links footer-contact">
					<div class="contact-item">
						<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<rect width="20" height="16" x="2" y="4" rx="2"></rect>
							<path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
						</svg>
						<a href={`mailto:${contactEmail}`}>{contactEmail}</a>
					</div>
					<div class="contact-item">
						<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<circle cx="12" cy="12" r="10"></circle>
							<polyline points="12 6 12 12 16 14"></polyline>
						</svg>
						<span>{t(currentLang, 'footer.hoursValue')}</span>
					</div>
				</div>
			</div>
		</div>

		<!-- Bottom Bar -->
		<div class="footer-bottom">
			<p class="copyright">
				{t(currentLang, 'footer.copyright').replace('{year}', String(currentYear))}
			</p>
			<p class="disclaimer">
				{t(currentLang, 'home.heroSubtitle').split('.')[0]}.
			</p>
		</div>
	</div>
</footer>

<style>
	/* ===== MOBILE FIRST FOOTER - Modern Collapsible Design ===== */
	.site-footer {
		background: linear-gradient(180deg, #0a4d75 0%, #023047 100%);
		color: #e2e8f0;
		padding: 40px 0 0;
		margin-top: 0;
	}

	/* Brand Section - Centered on mobile */
	.footer-brand-section {
		text-align: center;
		padding: 0 16px 32px;
		border-bottom: 1px solid rgba(255, 255, 255, 0.1);
		margin-bottom: 16px;
	}

	.footer-logo {
		display: flex;
		align-items: center;
		gap: 10px;
		justify-content: center;
		margin-bottom: 16px;
	}

	.footer-logo img {
		width: 36px;
		height: 36px;
	}

	.footer-logo-text {
		font-size: 24px;
		font-weight: 800;
		color: white;
		letter-spacing: -0.5px;
	}

	.footer-logo-text .highlight {
		color: #48cae4;
	}

	.footer-description {
		color: rgba(255, 255, 255, 0.75);
		line-height: 1.7;
		margin: 0 0 20px;
		font-size: 14px;
		max-width: 320px;
		margin-left: auto;
		margin-right: auto;
	}

	.footer-socials {
		display: flex;
		gap: 10px;
		justify-content: center;
	}

	.social-link {
		width: 42px;
		height: 42px;
		border-radius: 12px;
		background: rgba(255, 255, 255, 0.1);
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
		transition: all 0.25s ease;
		-webkit-tap-highlight-color: transparent;
	}

	.social-link:active {
		transform: scale(0.95);
		background: rgba(255, 255, 255, 0.2);
	}

	/* Footer Sections - Collapsible on mobile */
	.footer-links-grid {
		display: flex;
		flex-direction: column;
	}

	.footer-section {
		border-bottom: 1px solid rgba(255, 255, 255, 0.08);
	}

	.footer-section:last-child {
		border-bottom: none;
	}

	.footer-toggle {
		display: flex;
		align-items: center;
		justify-content: space-between;
		width: 100%;
		padding: 18px 20px;
		background: none;
		border: none;
		cursor: pointer;
		-webkit-tap-highlight-color: transparent;
	}

	.footer-toggle:active {
		background: rgba(255, 255, 255, 0.03);
	}

	.footer-heading {
		color: white;
		font-size: 14px;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.8px;
		margin: 0;
	}

	.toggle-icon {
		color: rgba(255, 255, 255, 0.5);
		transition: transform 0.3s ease;
	}

	.footer-section.open .toggle-icon {
		transform: rotate(180deg);
	}

	.footer-links {
		list-style: none;
		padding: 0 20px 20px;
		margin: 0;
		display: none;
	}

	.footer-section.open .footer-links {
		display: block;
	}

	.footer-links li {
		margin-bottom: 12px;
	}

	.footer-links li:last-child {
		margin-bottom: 0;
	}

	.footer-links a {
		color: rgba(255, 255, 255, 0.7);
		text-decoration: none;
		font-size: 14px;
		font-weight: 500;
		transition: color 0.2s ease;
		display: block;
		padding: 4px 0;
	}

	.footer-links a:hover,
	.footer-links a:active {
		color: #48cae4 !important;
	}

	/* Contact items styling */
	.footer-contact {
		display: flex;
		flex-direction: column;
		gap: 14px;
	}

	.footer-contact .contact-item {
		display: flex;
		align-items: center;
		gap: 10px;
		color: rgba(255, 255, 255, 0.7);
		font-size: 14px;
	}

	.footer-contact .contact-item svg {
		flex-shrink: 0;
		color: rgba(255, 255, 255, 0.5);
	}

	.footer-contact .contact-item a {
		color: rgba(255, 255, 255, 0.9);
		text-decoration: none;
		font-weight: 500;
	}

	/* Bottom Bar */
	.footer-bottom {
		border-top: 1px solid rgba(255, 255, 255, 0.08);
		padding: 24px 20px;
		margin-top: 24px;
		text-align: center;
	}

	.copyright {
		color: rgba(255, 255, 255, 0.6);
		font-size: 13px;
		margin: 0 0 8px;
	}

	.disclaimer {
		color: rgba(255, 255, 255, 0.4);
		font-size: 11px;
		margin: 0;
		line-height: 1.6;
	}

	/* ===== TABLET (768px+) ===== */
	@media (min-width: 768px) {
		.site-footer {
			padding: 56px 0 0;
		}

		.footer-brand-section {
			text-align: left;
			padding: 0 0 40px;
			margin-bottom: 32px;
		}

		.footer-logo {
			justify-content: flex-start;
		}

		.footer-description {
			margin-left: 0;
			max-width: 400px;
		}

		.footer-socials {
			justify-content: flex-start;
		}

		/* 2-column grid on tablet */
		.footer-links-grid {
			display: grid;
			grid-template-columns: repeat(2, 1fr);
			gap: 0;
		}

		.footer-section {
			border-bottom: none;
			border-right: 1px solid rgba(255, 255, 255, 0.08);
		}

		.footer-section:nth-child(2n) {
			border-right: none;
		}

		.footer-section:nth-child(n+3) {
			border-top: 1px solid rgba(255, 255, 255, 0.08);
		}

		/* Show links always on tablet */
		.footer-toggle {
			cursor: default;
			padding: 20px 24px 12px;
		}

		.toggle-icon {
			display: none;
		}

		.footer-links {
			display: block !important;
			padding: 0 24px 24px;
		}

		.footer-bottom {
			display: flex;
			justify-content: space-between;
			align-items: center;
			padding: 28px 0;
			text-align: left;
		}

		.copyright {
			margin: 0;
		}

		.disclaimer {
			text-align: right;
			max-width: 50%;
		}
	}

	/* ===== DESKTOP (992px+) ===== */
	@media (min-width: 992px) {
		.site-footer {
			padding: 64px 0 0;
		}

		.footer-brand-section {
			display: grid;
			grid-template-columns: 1fr auto;
			grid-template-rows: auto auto;
			gap: 0 40px;
			align-items: start;
			padding-bottom: 48px;
		}

		.footer-logo {
			grid-column: 1;
			margin-bottom: 12px;
		}

		.footer-description {
			grid-column: 1;
			margin-bottom: 0;
			max-width: 450px;
		}

		.footer-socials {
			grid-column: 2;
			grid-row: 1 / 3;
			align-self: center;
		}

		.social-link:hover {
			background: #f59e0b;
			transform: translateY(-2px);
			color: white !important;
		}

		/* 4-column grid on desktop */
		.footer-links-grid {
			grid-template-columns: repeat(4, 1fr);
		}

		.footer-section {
			border-right: none;
			border-top: none !important;
		}

		.footer-toggle {
			padding: 0 0 16px;
		}

		.footer-links {
			padding: 0;
		}

		.footer-links a:hover {
			transform: translateX(4px);
		}
	}
</style>

<script is:inline>
	// Mobile collapsible footer sections
	document.addEventListener('DOMContentLoaded', function() {
		const toggles = document.querySelectorAll('.footer-toggle');
		
		toggles.forEach(toggle => {
			toggle.addEventListener('click', function() {
				// Only work on mobile
				if (window.innerWidth < 768) {
					const section = this.closest('.footer-section');
					const isOpen = section.classList.contains('open');
					
					// Close all sections
					document.querySelectorAll('.footer-section').forEach(s => {
						s.classList.remove('open');
					});
					
					// Open clicked section if it wasn't open
					if (!isOpen) {
						section.classList.add('open');
					}
				}
			});
		});

		// Reset on resize
		window.addEventListener('resize', function() {
			if (window.innerWidth >= 768) {
				document.querySelectorAll('.footer-section').forEach(s => {
					s.classList.remove('open');
				});
			}
		});
	});
</script>
