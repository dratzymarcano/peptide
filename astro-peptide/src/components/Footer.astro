<style>
	/* ===== MOBILE FIRST FOOTER ===== */
	.site-footer {
		background: linear-gradient(180deg, #0077b6 0%, #023e8a 100%);
		color: #e2e8f0;
		padding-top: 48px;
		margin-top: 0;
	}

	.footer-brand {
		margin-bottom: 16px;
	}

	.footer-logo {
		display: flex;
		align-items: center;
		gap: 10px;
		justify-content: center;
	}

	.footer-logo-text {
		font-size: 22px;
		font-weight: 800;
		color: white;
	}

	.footer-logo-text .highlight {
		color: #90e0ef;
	}

	.footer-description {
		color: rgba(255, 255, 255, 0.8);
		line-height: 1.7;
		margin-bottom: 20px;
		font-size: 14px;
		text-align: center;
	}

	.footer-socials {
		display: flex;
		gap: 12px;
		justify-content: center;
		margin-bottom: 32px;
	}

	.social-link {
		width: 44px;
		height: 44px;
		border-radius: 10px;
		background: rgba(255, 255, 255, 0.1);
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
		transition: all 0.3s ease;
	}

	.social-link:hover {
		background: #f59e0b;
		transform: translateY(-2px);
	}

	.footer-heading {
		color: white;
		font-size: 14px;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.5px;
		margin-bottom: 16px;
		text-align: center;
	}

	.footer-links {
		list-style: none;
		padding: 0;
		margin: 0 0 32px 0;
		text-align: center;
	}

	.footer-links li {
		margin-bottom: 10px;
	}

	.footer-links a {
		color: rgba(255, 255, 255, 0.75);
		text-decoration: none;
		font-size: 14px;
		transition: all 0.2s ease;
		display: inline-block;
		padding: 4px 0;
	}

	.footer-links a:hover {
		color: #f59e0b;
	}

	.footer-contact {
		color: rgba(255, 255, 255, 0.8);
		font-size: 14px;
		text-align: center;
		margin-bottom: 32px;
	}

	.contact-item {
		margin-bottom: 14px;
		line-height: 1.6;
	}

	.contact-item strong {
		color: white;
	}

	.contact-item a {
		color: rgba(255, 255, 255, 0.8);
		text-decoration: none;
		transition: color 0.2s;
	}

	.contact-item a:hover {
		color: #f59e0b;
	}

	.footer-bottom {
		border-top: 1px solid rgba(255, 255, 255, 0.1);
		margin-top: 20px;
		padding: 24px 0;
		text-align: center;
	}

	.copyright {
		color: rgba(255, 255, 255, 0.6);
		font-size: 13px;
		margin: 0 0 12px 0;
	}

	.disclaimer {
		color: rgba(255, 255, 255, 0.6);
		font-size: 12px;
		margin: 0;
	}

	.disclaimer strong {
		color: rgba(255, 255, 255, 0.8);
	}

	/* ===== TABLET (768px+) ===== */
	@media (min-width: 768px) {
		.site-footer {
			padding-top: 60px;
		}

		.footer-logo {
			justify-content: flex-start;
		}

		.footer-description {
			text-align: left;
		}

		.footer-socials {
			justify-content: flex-start;
			margin-bottom: 0;
		}

		.footer-heading {
			text-align: left;
		}

		.footer-links {
			text-align: left;
			margin-bottom: 0;
		}

		.footer-contact {
			text-align: left;
			margin-bottom: 0;
		}

		.footer-bottom {
			margin-top: 40px;
		}

		.copyright {
			margin-bottom: 8px;
		}
	}

	/* ===== DESKTOP (992px+) ===== */
	@media (min-width: 992px) {
		.site-footer {
			padding-top: 80px;
		}

		.footer-logo-text {
			font-size: 24px;
		}

		.footer-heading {
			font-size: 15px;
			margin-bottom: 20px;
		}

		.footer-links li {
			margin-bottom: 12px;
		}

		.footer-bottom {
			margin-top: 50px;
			padding: 30px 0;
		}

		.copyright {
			margin-bottom: 0;
		}

		.disclaimer {
			font-size: 13px;
		}
	}
</style>

